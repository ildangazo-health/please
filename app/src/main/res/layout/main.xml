<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/AppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Mate"
        android:textSize="24sp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/imageView_hospital"
        app:layout_constraintVertical_chainStyle="packed"/>

    <ImageView
        android:id="@+id/imageView_hospital"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:src="@drawable/hospital"
        app:layout_constraintTop_toBottomOf="@+id/AppName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/button_map"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="건강검진 병원 찾기"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView_hospital"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/imageView_checkup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:src="@drawable/checkup"
        app:layout_constraintTop_toBottomOf="@+id/button_map"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/button_checkup_list"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="검진결과목록"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView_checkup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/imageView_checklist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:src="@drawable/checklist"
        app:layout_constraintTop_toBottomOf="@+id/button_checkup_list"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/button_check"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="자가진단"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView_checklist"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
